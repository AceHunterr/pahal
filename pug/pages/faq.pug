extends /pug/bases/header.pug

block headelms
	link(rel="stylesheet" href="styles/faq.min.css" type="text/css")

block content
	section#faq
		.section-title FAQ
		.card
			b Data provided should not be assumed as official.
		-
			var faqs = [
				{
					'ques':'Are all documents necessary at the time of admission',
					'ans' :'Not necessarily, documents like JoSAA letter, ID proof are must. Other missing document can be declared and submited after wards. For more info see <a href="docreq.html" target="_blank">documnets required</a>.'
				},
				{
					'ques':'When will teaching begin',
					'ans' :'Soon after end of admission procecss,(23<sup>rd</sup> July). Students should come prepared for accomodation'
				},
				{
					'ques':'Can I get my medical certificate made at NIT Hamirpur',
					'ans' :'Yes, it\'s fairly easy, NIT\'s dispensary is near auditorium where admission process will take place.'
				},
				{
					'ques':'Can I get my medical certificate made at NIT Hamirpur',
					'ans' :'Yes there is facility of notary arranged for convenence'
				},
				{
					'ques':'Can I get my gap certificate made at NIT Hamirpur',
					'ans' :'Yes there is facility arranged for convenience of students.'
				},
			]
		each faq in faqs
			.card.expand
				input(type="checkbox")
				.row
					.title Q. #{faq.ques}?
					.arrow
				.row
					.desc!= faq.ans
