extends /pug/bases/header.pug

block headelms
	link(rel="stylesheet", type="text/css", href="styles/index.min.css")

block content
	section#banner
		div.shadow
			h1 PAHAL
			p An initiative by ISTE, NIT Hamirpur
	-
		var buttons = [
			{"title":"TODO","icon":"fas fa-list","link":"todo.html"},
			{"title":"MAP","icon":"fas fa-map-marked","link":"#"},
			{"title":"FAQ","icon":"fas fa-question-circle","link":"faq.html"},
			{"title":"FEEDBACK","icon":"fas fa-comments","link":"feedback.html"},
			{"title":"ABOUT US","icon":"fas fa-user-friends","link":"https://istenith.github.io/"}
		];
		var timer = ["days","hours","mins","seconds"];
	br
	.card 
		#countdown-display-heading
		h2 Admissions starting in
		#countdown-display 
			each unit in timer
				#countdown-unit
					div(class=unit)
					p= unit

	.link-flex
		each button in buttons
			a(class="link-square",href=button.link)
				.title= button.title
				i(class=button.icon)
				
	script(type="text/javascript" src="scripts/index.js")
